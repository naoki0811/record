<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@user.nickname}さんの情報"%>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.nickname %></td>
          </tr>


          
        </tbody>
      </table>
      <h2 class="page-heading">
        <%= "#{@user.nickname}の投稿"%>
      </h2>
      <div class="user__card">
        <%= render partial: "tweets/tweet", collection: @tweets %>
      </div>
    </div>
  </div>
</div>