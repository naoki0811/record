<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@user.nickname}さんの情報"%>
      </h2>

      <% if user_signed_in? && @user == current_user %>
      <p class="d-flex justify-content-end">
        <%= link_to "プロフィール編集", edit_user_path(@user), class: "btn-sm btn-success" %>
      </p>
      <% end %>
      <div class="d-flex">
        <%#<%= attachment_image_tag @user, :profile_image, size: '100x100', fallback: "no_image.png", class: "mb-3 profile-img" %>
        <h4 class="ml-3 mb-3 card w-100">
          <h4 class="info">自己紹介</h4>
        <%= @user.profile %>
        </h4>
      </div>

      <h2 class="page-heading">
        <%= "#{@user.nickname}の投稿"%>
      </h2>
      <div class="user__card">
        <%= render partial: "tweets/tweet", collection: @tweets %>
      </div>
    </div>
  </div>
</div>