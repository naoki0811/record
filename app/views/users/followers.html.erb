<div class="cover-user-index">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-3 mb-3">フォロワー</h1>
    </div>
    <div class="row justify-content-center">
      <% @users.each do |user| %>
      <div class="one-post card w-50">
        <%= link_to user_path(user) do %>
        <p class="nickname"><%= user.nickname %></p>
        <div class="image-image">
          <%= attachment_image_tag user, :profile_image, size: '100x100', fallback: "no_image.png", class: "mb-3 mt-3 ml-3 profile-img" %>
        </div>
        <p class="caption"><%= "#{user.tweets.count} 投稿" %></p>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>