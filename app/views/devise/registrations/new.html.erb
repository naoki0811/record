<div class="cover-index-log">
  <div class="container">
    <div class="justify-content-center">
      <h1 class="font-weight-normal mt-3 mb-3">新規登録</h1>

      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
        <%= render 'shared/error_messages', model: f.object %>
        <div class="field">
          <%= f.label :nickname, "名前", class: "form-label"%><br />
          <%= f.text_field :nickname, id:"user_name" %>
        </div>
        
        <div class="field">
          <%= f.label :email, "Eメール", class: "form-label" %><br />
          <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード(6文字以上)", class: "form-label" %><br />
          <%= f.password_field :password, id:"user_password", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード(確認)", class: "form-label" %><br />
          <%= f.password_field :password_confirmation, id:"user_password_confirmation", autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: :form__btn  %>
        </div>
        
      <% end %>
    </div>
  </div>
</div>