<div class="cover-index-log">
  <div class="container">
    <div class="justify-content-center">
      <h1 class="font-weight-normal mt-3 mb-3">ログイン</h1>
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>
          <%= render 'shared/error_messages', model: f.object %>

        <div class="field">
          <%= f.label :email, "Eメール", class: "form-label" %><br />
          <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード(6文字以上)", class: "form-label" %><br />
          <%= f.password_field :password, id:"user_password", autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: :form__btn %>
        </div>
      <% end %>
    </div>
  </div>
</div>