<div class="cover-edit">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-3 mb-3">投稿編集</h1>
    </div>
    <div class="row justify-content-center">
      <%= form_with model: @tweet, url:"/tweets/#{@tweet.id}", id: 'new_tweet', local:true do |f| %>
      <div class="form-group">
        <label class="form-label">タイトル</label>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <label class="form-label">テキスト</label>
        <%= f.text_area :text, id: 'article_markdown_content',class: "form-control", placeholder:"マークダウン形式OK" %>
      </div>

      <div class="form-content">
        <div id="previews"></div>
        <label class="form-image"></label>
        <%= f.file_field :images, name: 'tweet[images][]', data: {index: 0}, class: "form-field" %>
      </div>

      <div class="code-block">
        <div class="code__block">
          <div class="preview__nav">Preview</div>
          <div class="markdown__space markdown" id="preview" ></div>
        </div>   
      </div>

      <%= f.submit '保存する', class: "btn btn-success" %><br>
      <%= link_to '投稿詳細ページへ', tweet_path(@tweet), class: "btn btn-dark mt-3" %>
      <% end %>
    </div>
  </div>
</div>