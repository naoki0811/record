<div class="cover-new">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-2">新規投稿</h1>
    </div>
    <div class="row justify-content-center">
      <%= form_with model: @tweet, id: 'new_tweet', local: true do |f|%>
      <div class="form-group">
        <label class="form-label">タイトル</label>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <label class="form-label">本文</label>
        <%=f.text_area :text, rows: 10, class: "form-control" %>
      </div>

      <div class="form-group">
        <div id="previews"></div>
        <label class="form-label">画像</label>
        <%= f.file_field :images, name: 'tweet[images][]', data: {index: 0}, class: "form-field" %>
      </div>
      <%= f.submit "投稿する", class: :form__btn  %>
    <% end %>
  </div>
</div>